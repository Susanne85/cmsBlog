<section class="card">
    <header>{{blog.title}}</header>
    <h1>{{blog.content}}</h1>
    <h2>Created by: {{blog.creator}} on {{format_date blog.date_created}}</h2>
    
</section>

<section class="flex-row justify-space-around ">
    {{#each blog.comments as | comment|}}
    <header>{{post_comment}} by {{post_user}}</header>
    {{/each}}
</section>

{{#if loggedIn}}
<section>
    <form class="form newComment-form">
        <button class="btn btn-post" type="submit">New Comment</button>
        <input type="hidden" name="blog_id" id="blog_id" value={{blog.id}}>
    </form>
    <script src="../js/comment.js"></script>
</section>
{{/if}}