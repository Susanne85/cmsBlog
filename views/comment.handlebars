<section class="card">
    <header>{{blog.title}}</header>
    <h2>{{blog.content}}</h2>
    <h3>Created by: {{blog.creator}} on {{format_date blog.date_created}}</h3>
</section>

{{#each blog.comments as | comment|}}
<section class="card">
    <header></header>
    <h1 class="flex-row justify-space-around m-2">{{post_comment}}</h1>
    <h2 class="text-center">by {{post_user}}</h2>
</section>
{{/each}}


{{#if loggedIn}}
<button class="btn btn-post"><a href="/newComment/?blogId={{blog.id}}">New Comment</a></button>
{{/if}}